{
    "tasks": {
        "dev": "deno run --cached-only --allow-net=127.0.0.1:8000 --allow-read=./ --watch src/main.ts",
        "test": "deno test --allow-net=localhost --allow-read=./",
        "start": "deno run --allow-net --watch --cached-only main.ts "
    },
    "imports": {
        "./": "./",
        "/": "./",
        "@hono/zod-validator": "npm:@hono/zod-validator@^0.3.0",
        "@std/assert": "jsr:@std/assert@^1.0.6",
        "aloedb": "https://deno.land/x/aloedb@0.9.0/mod.ts",
        "hono": "npm:hono@^4.6.3",
        "src/": "./src/",
        "zod": "npm:zod@^3.23.8"
    },
    "fmt": {
        "lineWidth": 120,
        "indentWidth": 4,
        "singleQuote": true
    },
    "nodeModulesDir": "none",
    "vendor": false
}
